<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true">

    <Button android:id="@+id/btn_raw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:text="Open epub from raw"/>
    <Button android:id="@+id/btn_assest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/btn_raw"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:text="Open epub assests"/>
    <Button android:id="@+id/btn_sdcard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/btn_assest"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:text="Open epub sdcard"/>
    <Button android:id="@+id/btn_chinese"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/btn_sdcard"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:text="Open epub 中文"/>
    <Button android:id="@+id/btn_file_system"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/btn_chinese"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:text="Open File System"/>
    <!--<fr.castorflex.android.verticalviewpager.VerticalViewPager
        android:id="@+id/verticalPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </fr.castorflex.android.verticalviewpager.VerticalViewPager>-->

</RelativeLayout>
